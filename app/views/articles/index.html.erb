<%= render "shared/header" %>
<div class="contents_low">
  <% @articles.each do |article| %>
    <div class="more", id="more">
      <div class="articles">
        <% article.images.first(1).each do |image| %>
          <%= image_tag image, class: "images" %>
        <% end %>
      </div>
      <span class="name">
        <%= article.store_name %>
        <%= article.address %>
        <span>投稿者</span><%= link_to article.user.nickname, user_path(article.user.id) %>
      </span>
      <ul class="more-list">
        <li>
          <%= link_to '詳細', article_path(article.id)%>
        </li>
      </ul>
    </div>
  <% end %>
</div>
