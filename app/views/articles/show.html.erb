<div class="contents row">
  <div class="more">
    <span><%= image_tag @article.image, class: "article-img" %></span>
    <ul class="more-list">
      <li>
        <%= link_to '編集', edit_article_path(@article.id), method: :get %>
      </li>
      <li>
        <%= link_to "削除", article_path(@article.id), method: :delete %>
      </li>
    </ul>
    <p><%= @article.text %></p>
    <span class="name">
      <%= @article.store_name %>
    </span>
  </div>
</div>