<div class="body-devise">
  <div class="field">
    <div class="field-inner">
      <h2>Sign up</h2>
      <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>

        <%= render 'shared/error_messages', model: f.object %>

        <div class="field-text">
          <%= f.label :email %><br />
          <%= f.email_field :email, placeholder: "Email", class:'text-box', autofocus: true, autocomplete: "email" %>
        </div>
        <div class="field-text">
          <%= f.label :password %><br />
          <%= f.password_field :password, placeholder: "Password", class:'text-box', autocomplete: "current-password" %>
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field-text">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>
        <div class="actions">
          <%= f.submit "Log in", class:'sign-btn' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
