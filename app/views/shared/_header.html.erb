<header class="header">
  <div class="wrapper_header">
    <div class='header_start'>
      <%= link_to 'original-app2', root_path, class: "original-icon" %>
    </div >
    <div class="header_end">
      <div class="nav">
        <ul class='nav-lists'>
          <% if user_signed_in? %>
            <li class="button">
              <%= link_to current_user.nickname, user_path(current_user.id), class: "user-nickname" %>
            </li>
            <li class="button">
              <%= link_to "投稿する", new_article_path, class: "post" %>
            </li>
            <li class="button">
              <%= link_to "通知", notifications_path, method: :get, class: "notification" %>
            </li>
            <li class="button">
              <%= link_to "トークルーム", rooms_path, method: :get, class: "room" %>
            <li>
            <li class="button">
              <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %>
            </li>
          <% else %>
            <li class="button">
              <%= link_to 'ログイン', new_user_session_path, class: "login" %>
            </li>
            <li class="button">
              <%= link_to '新規登録', new_user_registration_path, class: "sign-up" %>
            </li>
          <% end %>
        </ul>
      </div> 
    </div>
  </div>
</header>